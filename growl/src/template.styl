html
	font-size: 18px

body, html
	text-rendering : optimizeLegibility
	font-family    : Helvetica
	margin         : 0
	padding        : 0
	width          : 100%
	height         : 100%

#container
	background    : rgba(0,0,0,0.95)
	overflow      : visible
	width         : inherit
	display       : table
	position      : relative
	border-radius : 0.25em
	padding       : 0.25em

	& > *
		display  : table-cell
		position : relative
		margin   : 0
		padding  : 0
		width    : 0
		height   : 0

aside
	vertical-align : top
	text-align     : center

	& > img
		width: 1.5em

article
	& > div
		margin: 0 0.5rem

h1,p
	margin      : 0
	padding     : 0
	white-space : nowrap

h1
	color       : #FFF
	font-size   : 0.8rem
	font-weight : bold

	strong, em
		font-weight: bolder
		font-style:normal
		vertical-align: super
		font-size: 0.6rem

	strong
		color: tomato
		&:after
			content: ' ‚ù§Ô∏è'
	em
		color: lightgreen
		&:after
			content: ' üçÄ'

p
	color       : #CCC
	font-size   : 1rem
	font-weight : normal

	em
		color: lightblue
		font-style: normal
		font-weight: bold

	strong
		color: lightpink
		font-style: normal
		font-weight: bold

	u
		display:block
		margin:0
		margin-right: 0.5rem
		font-size: 0.7rem
		color: deepskyblue
		text-align: right
