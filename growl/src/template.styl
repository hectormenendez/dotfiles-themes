body, html
	text-rendering : optimizeLegibility
	font-family    : Helvetica
	margin         : 0
	padding        : 0
	width          : 100%
	height         : 100%

#container
	background    : rgba(0,0,0,0.8)
	overflow      : visible
	width         : inherit
	display       : table
	position      : relative
	border-radius : 0.25em
	padding       : 0.25em

	& > *
		display  : table-cell
		position : relative
		margin   : 0
		padding  : 0
		width    : 0
		height   : 0

aside
	vertical-align : top
	text-align     : center

	& > img
		width: 1.5em

article
	& > div
		margin      : 0
		margin-left : 0.5em

h1,p
	color       : #fff
	margin      : 0
	padding     : 0
	font-size   : 0.6em
	white-space : nowrap
